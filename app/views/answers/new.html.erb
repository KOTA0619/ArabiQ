<div class="container">

<h1 class="mt-5 mb-3 text-center">返信作成</h1>
<hr>

<div class="text-center">
    <h2 class="mt-3">質問</h2>
    <% question = Question.find(params[:question_id]) %>
    <p>タイトル：<%= question.title %></p>
    <p class="q_content">本文：<%= question.content %></p>
</div>

<div class="text-center border-top">
    <h2 class="mt-3">返信</h2>
</div>


<%= form_with(model: @answer, url: question_answers_path(params[:question_id]), local: true) do |f| %>
  <%= render 'layouts/error_message', model: f.object %>
    <div class="row mt-2 justify-content-center">
        <div class="col-sm-6">
        
            <div class="form-group">
              <%= f.label :content, '本文' %>
              <%= f.text_area :content, class: 'form-control' %>
            </div>
            
        </div>
        
        <div class="col-sm-6">
            <div class="form-group">
              <%= f.label :image, '画像' %>
              <%= f.file_field :image, class: 'form-control', id: :img %>
            </div>
            
            <script type="text/javascript">
            $(function() {
              function readURL(input){
                if (input.files && input.files[0]){
                  var reader = new FileReader();
                  reader.onload = function(e){
                    $('#image_prev').attr('src', e.target.result);
                  }
                  reader.readAsDataURL(input.files[0]);
                }
              }
              $('#img').change(function(){
                readURL(this);
              });
            });
            </script>
            
            <div>
              <%= image_tag 'no_image_yoko.jpg', id: :image_prev %>
            </div>
            
        </div>
        
        <div class="text-center">
        　<%= f.submit '投稿', class: 'btn btn-primary btn-lg mb-3 mt-3' %>
        </div>
    </div>
<% end %>

</div>