<h1 class="mt-5 mb-3 text-center">返信作成</h1></h1>

<div class="text-center border-top">
    <h2 class="mt-3">質問</h2>
    <% question = Question.find(params[:question_id]) %>
    <p>タイトル：<%= question.title %></p>
    <p>本文:<%= question.content %></p>
</div>

<div class="text-center border-top">
    <h2 class="mt-3">返信</h2>
</div>

<div class="row mt-2 justify-content-center">
    <div class="col-sm-8">
      
      <%= form_with(model: @answer, url: question_answers_path, local: true) do |f| %>
        <%= render 'layouts/error_message', model: f.object %>
        
        <div class="form-group">
          <%= f.label :content, '本文' %>
          <%= f.text_area :content, class: 'form-control' %>
        </div>
        
        <div class="text-center">
        　<%= f.submit '投稿', class: 'btn btn-primary btn-center' %>
        </div>
      <% end %>
    </div>
</div>
