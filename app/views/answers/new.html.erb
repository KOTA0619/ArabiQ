<h1 class="mt-5 text-center">返信作成</h1></h1>

<div class="row mt-5">
    <div class="col-sm-6 offset-sm-3">
      
      <%= form_with(model: [@question, @answer], url: question_answers_path, local: true) do |f| %>
        
        <div class="form-group">
            <%= f.label :content, '本文' %>
            <%= f.text_field :content, class: 'form-control' %>
        </div>
        
        <div class="text-center">
        　<%= f.submit '投稿', class: 'btn btn-primary btn-center' %>
        </div>
      <% end %>
    </div>
</div>
