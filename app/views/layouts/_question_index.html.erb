<div>
    <div class="mt-4 ml-4">
        <h3><%= question.title %></h3>
    </div>
    <div class="mt-3 ml-4">
        <p class="q_content"><%= safe_join(question.content.split("\n"),tag(:br))%></p>
    </div>
    <div class="ml-4">
        <p class="text-right text-muted"><%= question.created_at %></p>
    </div>
    <div class="row justify-content-end">
      <% if current_user == user %>
        <div class="mr-3">
          <%= link_to '編集', edit_question_path(question.id), class: 'btn btn-info' %>
        </div>
      <% end %>
        <div class="mr-3">
          <%= link_to '返信', new_question_answer_path(question.id), class: 'btn btn-primary' %>
        </div>
        <div class='mr-5'>
          <%= link_to '詳細', question, class: 'btn btn-dark' %>
        </div>
    </div>
</div>


