<div class="container">
  <h1 class="text-center mt-3">ユーザー一覧</h1>
  <hr>
  <% if @users.any? %>
    <div class="card-deck row">
      <% @users.each do |user| %>
          <div class="col-sm-3">
              <div class="mt-5 w-75">
                  <div class="card">
                      <img class="rounded-circle d-block mx-auto img-fluid card-img-top" src="<%= gravatar_url(user) %>" alt="">
                      <div class="card-footer text-center">
                        <%= link_to user.name, user_path(user.id) %>
                      </div>
                  </div>
              </div>
          </div>
      <% end %>
    </div>
    <hr>
    <div class="mt-3">
      <%= paginate @users %>
    </div>
  <% end %>
</div>
