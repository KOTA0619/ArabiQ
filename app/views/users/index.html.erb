<div class="container">
  <h1 class="text-center mt-3">ユーザー一覧</h1>
  <hr>
  <% if @users.any? %>
    <div class="card-deck row">
      <% @users.each do |user| %>
          <div class="col-sm-3">
              <div class="mt-5 w-75">
                  <%= render 'layouts/prof_icon', user: user %>
              </div>
          </div>
      <% end %>
    </div>
    <hr>
    <div class="mt-3">
      <%= paginate @users %>
    </div>
  <% end %>
</div>
